<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="simpleView"
                android:text="自定义view" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="qqListDelete"
                android:text="QQListDelete" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="gestureLock"
                android:text="gestureLock" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="arcMenu"
                android:text="arcMenu" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="luckyPan"
                android:text="luckyPan" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="recyclerView"
                android:text="recyclerView" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>